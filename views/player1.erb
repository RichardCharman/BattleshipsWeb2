<div style='width: 700px; height: 600px; border: 3px solid red; text-align:center; margin:0 auto; '>
  <p><img src='http://3.bp.blogspot.com/-byRQqraXP7s/VcRlvUAz_jI/AAAAAAAAQtc/18DMylwrv88/s1600/battleshipsplayer1.jpg' width="550"></p>
  <p><font size="6" color="blue"><strong><u><%= session[:player1] %>'s turn</u></strong></font></p>
  <div style="float: left; width: 300px;"> 
    <% if session[:game].has_winner? %>
      <br> Congratulations <%= session[:player1] %> wins!
      <br> <a href="/">New Game</a>
    <% end %>
    <% if @turn = 0 %>
    <p><font size="4"><strong><u>Enter coordinates to fire</u></strong></font></p>
      <form action="/pvp/play/p1turn" method="post" >
        <input type="text" name="coordinates">
        <input type="submit" value="Fire">
    </form></p>
    <% end %>
    <% if @turn = 1 %>
       <% if @coordinates %> 
        <font size="6" color="blue"><strong><%= session[:game].player_1.shoot @coordinates.to_sym %></strong></font>
        <p><a href='/pvp/play/p2turn'><button type="button">Click for <%=session[:player2]%>'s turn</button></a>
        <% end %>
          <% end  %>                   
  </div>
 <div style="float: left; width: 300px;"> 
    <p><font size="4" color="red"><strong><%= session[:player2] %>'s board</strong></font></p>
      <font size="4"><strong><pre>
<%= session[:game].opponent_board_view(session[:game].player_1) %>
      </pre></strong></font>
  </div>
</div> 